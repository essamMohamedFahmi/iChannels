platform :ios, '12.2'

target 'iChannels' do
  use_frameworks!

  # Pods for iChannels

  # Helper
  pod 'NVActivityIndicatorView', :git => 'https://github.com/ninjaprox/NVActivityIndicatorView.git', :tag => '4.8.0'
  pod 'Toast-Swift'

  # Network
  pod 'Moya'

  # Image Caching
  pod 'Kingfisher'
  
  # Custom Layouts For Collection View
  pod 'JEKScrollableSectionCollectionViewLayout'
  
  target 'iChannelsTests' do
    inherit! :search_paths
    # Pods for testing
  end

end
